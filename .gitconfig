# This file is managed by the homecookin cookbook.
#

[core]
  excludesfile = "~/.gitignore"
  pager = diff-so-fancy | less --tabs=2 -RFXN
[user]
  name = Casey Liscum
  email = casey@vistarmedia.com
[alias]
  ci = commit
  co = checkout
  df = diff
  dfc = diff --cached
  hist = log --oneline --graph --decorate
  lg = log --decorate --abbrev-commit
  lgp = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  pl = pull
  pu = push
  pub = "!f() { git push ${1:-origin} `git symbolic-ref HEAD`; }; f"
  pul = "!f() { git pull ${1:-origin} `git symbolic-ref HEAD`; }; f"
  rl = reflog
  sh = show --abbrev-commit
  st = status --short --branch
[web]
  browser = open
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red
  whitespace = red reverse
[color "diff-highlight"]
  newHighlight = "green bold"
  newNormal = "green"
  oldHighlight = "red bold"
  oldNormal = "red"
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = simple
