#!/bin/zsh

xrandr --dpi {{/x/dpi}}

setxkbmap \
  -option caps:super \
  -option ctrl:ralt_rctrl \
  -option ctrl:rctrl_ralt

xset r rate 220 50

xsetroot -cursor_name gumby -solid '#2c3e50'

services=(xsettingsd redshift autocutsel xautolock dropbox)
for service in $services; do
  echo -n "Starting ${service} ... "
  systemctl --user start ${service}.service
  echo 'done'
done
